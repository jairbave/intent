<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="Uno"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_num3"
        android:layout_width="220dp"
        android:layout_height="54dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:text="   3.  Fibonacci"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_num2" />

    <TextView
        android:id="@+id/txt_num2"
        android:layout_width="220dp"
        android:layout_height="54dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:text="   2.  Potencia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_num1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="339dp"
        android:layout_height="61dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="36dp"
        android:text="Introduce La Operacion A Realizar"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_num1"
        android:layout_width="220dp"
        android:layout_height="54dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:text="   1.  Multiplicacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/txt_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Operacion a Realizar"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_num3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="152dp"
        android:layout_height="68dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="44dp"
        android:onClick="Primero"
        android:text="Operacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_numero" />

</androidx.constraintlayout.widget.ConstraintLayout>